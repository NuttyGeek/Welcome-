<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="360dp"
    android:layout_height="490dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.sonal.welcome.registeractivity"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/colorPrimary"
    android:padding="5dp"
    android:layout_gravity="center">

    <TextView
        android:id="@+id/txtclose"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:textColor="#f21c1c"
        android:text="X"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_gravity="end"
        android:background="@drawable/circleback"
        />
    <android.support.v7.widget.CardView
        android:layout_width="400dp"
        app:cardCornerRadius="60dp"
        app:cardBackgroundColor="#fff"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="vertical">
                        <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginRight="15dp"
                        android:text="Register Here"
                        android:layout_gravity="center"
                        android:textColor="@color/darkpink"
                        android:textSize="30sp"
                        android:textStyle="italic"/>
                    <LinearLayout
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <EditText
                            android:layout_width="350dp"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@drawable/ic_person_outline_black_24dp"
                            android:drawablePadding="10dp"
                            android:hint="USERNAME"
                            android:id="@+id/username1"
                            android:textColor="#f21c1c" />

                        <EditText
                                android:drawablePadding="10dp"
                                android:drawableLeft="@drawable/ic_person_black_24dp"
                                android:layout_width="350dp"
                          android:textColor="#f21c1c"
                            android:id="@+id/userrole"
                                android:layout_height="wrap_content"
                                android:hint="Roll-student/teacher/H.O.D"
                                />

                        <EditText
                            android:drawablePadding="10dp"
                            android:drawableLeft="@drawable/email"
                            android:layout_width="350dp"
                            android:layout_height="wrap_content"
                            android:hint="Email"
                            android:id="@+id/email1"
                            android:textColor="#f21c1c"
                            />
                        <EditText
                            android:drawablePadding="10dp"
                            android:drawableLeft="@drawable/ic_lock_outline_black_24dp"
                            android:layout_width="350dp"
                            android:layout_height="wrap_content"
                            android:hint="Password"
                            android:id="@+id/password1"
                            android:textColor="#f21c1c"
                            />

                        <EditText
                            android:drawablePadding="10dp"

                            android:drawableLeft="@drawable/ic_account_balance_black_24dp"
                            android:layout_width="350dp"
                            android:layout_height="wrap_content"
                            android:hint="Branch"
                            android:id="@+id/branch"
                            android:textColor="#f21c1c"
                            />
                    </LinearLayout>

                    <EditText
                        android:drawablePadding="10dp"
                        android:drawableLeft="@drawable/contact"
                        android:layout_width="350dp"
                        android:layout_height="wrap_content"
                        android:hint="Contact"
                        android:id="@+id/contact"
                        android:textColor="#f21c1c"
                        android:layout_marginLeft="25dp"
                        android:inputType="textPassword"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <RadioGroup
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:id="@+id/gender">
                            <TextView
                                android:layout_width="wrap_content"
                                android:drawableLeft="@drawable/gender"
                                android:layout_height="wrap_content"
                                android:text="Gender "
                            android:textColor="#f21c1c"
                                android:layout_marginLeft="30dp"
                                android:drawablePadding="10dp"/>
                            <RadioButton
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Male"/>
                            <RadioButton
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Female"/>
                        </RadioGroup>
                    </LinearLayout>



                    <EditText
                        android:drawablePadding="10dp"

                        android:drawableLeft="@drawable/date"
                        android:layout_width="match_parent"
                        android:layout_marginLeft="25dp"
                        android:layout_height="wrap_content"
                        android:textColor="#f21c1c"
                        android:id="@+id/dob"
                        android:hint="D.O.B-dd/mm/yyyy"
                        />
                    <EditText
                        android:drawablePadding="10dp"
                        android:layout_marginLeft="25dp"
                        android:drawableLeft="@drawable/address"
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:hint="Address"
                        android:id="@+id/address"
                        android:textColor="#f21c1c"
                        />
                    <EditText
                        android:drawablePadding="10dp"
                        android:layout_marginLeft="25dp"
                        android:drawableLeft="@drawable/ic_repeat_one_black_24dp"
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:hint="Registration No."
                        android:id="@+id/registrationno"
                        android:textColor="#f21c1c"
                        />
                    <Button
                        android:drawableRight="@drawable/ic_send_black_24dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_width="140dp"
                        android:layout_height="60dp"
                        android:background="@drawable/buttonstyle2"
                        android:text="Register"

                        android:id="@+id/reg"
                        android:layout_marginLeft="110dp"
                        android:textColor="#fff"
                        />

                </LinearLayout>
            </ScrollView>
        </LinearLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>

